<style>
    .truncate {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .table th,
    .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table {
        table-layout: fixed;
        width: 100%;
    }

    .small-column {
        width: 10%;
    }

    .long-column {
        width: 20%;
    }

    .tiny-column {
        width: 20%;
    }

    .btn-link {
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 112px;
        background-color: rgba(233, 36, 36, 0.767);
        text-decoration: none;
        color: white;
        transition: color 0.3s;
    }

    .btn-link:hover {
        color: rgb(208, 255, 0);
    }

    .modal {
        margin-top: 60px;
    }
</style>

<a href="/" class="back" style="text-decoration: none; color: black;">
    <i class="fas fa-backward" style="margin-right: 5px;"></i>Quay lại
